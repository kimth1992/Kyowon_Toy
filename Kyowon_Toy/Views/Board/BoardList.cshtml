@model List<BoardModel>
@{
    int page = ViewBag.Page ?? 1;  // 없으면 1
    int totalCount = ViewBag.TotalCount ?? 0;   // 없으면 0
    int maxListCount = ViewBag.MaxListCount ?? 1;
    int totalPageCount = ViewBag.TotalPageCount ?? 1;
    int startPage = ViewBag.StartPage;
    int endPage = ViewBag.EndPage;

    if (page > totalPageCount)
    {
        totalPageCount = page;
    }

}

<style>
    th {
        text-align: center;
    }

    container {
        padding:50px 20px;
    }
</style>

<!--  검색기능 영역  -->



<div class="container" >
		<div class="row">
			<form method="post" name="search" action="/board/search">
				<table class="pull-right" >
					<tr>
						<td><select class="form-control" name="searchField">
								<option value="제목">제목</option>
								<option value="게시자">게시자</option>
								<option value="부서">부서</option>
						</select></td>
						<td><input type="search" class="form-control"
							placeholder="검색어 입력" name="searchText" maxlength="100"></td>
						<td><button type="submit" class="btn btn-success">검색</button></td>
					</tr>

				</table>
			</form>
		</div>
	</div>

           
<!--  검색기능 영역 여기까지  -->


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered no-wrap">
                        <colgroup>
                            <col style="width:100px" />
                            <col style="width:auto" />
                            <col style="width:100px" />
                            <col style="width:100px" />
                            <col style="width:20px" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>번호</th>
                                <th><center>제목</center></th>
                                <th><center>등록자</center></th>
                                <th>등록일시</th>
                                <th><center>조회수</center></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td text-align: center>@item.idx</td>
                                    <td><a href="/board/boardView?idx=@item.idx">@item.title</a></td>
                                    <td>@item.userName</td>
                                    <td>@item.registeredDate</td>
                                    <td><center>@item.view_Cnt</center></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- 페이징 버튼 부분 -->
                    <div class="text-center">
                        <div class="btn-group">
                            <div>
                                @if (startPage > 1)
                                {
                                    <button type="button" class="btn btn-link">
                                        <a href="?page=1">&lt;&lt;</a>
                                    </button>
                                    <button type="button" class="btn btn-link">
                                        <a href="?page=@(startPage-1)">&lt;</a>
                                    </button>
                                }
                                @if (page != 1)
                                {
                                    <button type="button" class="btn btn-link">
                                        <a href="?page=@(page-1)">이전&nbsp;</a>
                                    </button>
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <a href="?page=@i" class="btn btn-@(page == i? "primary" : "default")">@i</a>

                                }
                                @if (page != totalPageCount)
                                {
                                    <button type="button" class="btn btn-link">
                                        <a href="?page=@(page+1)">다음</a>
                                    </button>
                                }
                                @if (page < totalPageCount)
                                {
                                    <button type="button" class="btn btn-link">
                                        <a href="?page=@(endPage+1)">&gt;</a>
                                    </button>
                                    <button type="button" class="btn btn-link">
                                        <a href="?page=@totalPageCount">&gt;&gt;</a>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>


                    @if (Model.Count() == 0)
                    {
                        <div class="alert alert-info">
                            데이터가 없습니다.
                        </div>
                    }
                </div>
                <div class="text-right">
                    <a href="/board/boardwrite" class="btn btn-sm btn-primary">글쓰기</a>
                </div>
            </div>
        </div>
    </div>
</div>




