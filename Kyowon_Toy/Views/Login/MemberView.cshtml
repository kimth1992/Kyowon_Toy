@using System.Security.Claims

@{
    MemberModel member = ViewBag.member; // 로그인 멤버
    MemberModel searchMember = ViewBag.searchMember; // 검색된 멤버

 
}

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

            <div class="card-body">
                <div class="table-responsive">
                     <form id="form2" method="post" action="/login/adminEdit_input">
                    <table class="table table-striped table-bordered no-wrap" >
 
                        <thead>
                            <tr>
                                <th><center>사번</center></th>
                                <th><center>이름</center></th>
                                <th><center>부서</center></th>
                                <th><center>직책</center></th>
                                <th><center>이메일</center></th>
                                <th><center>내선번호</center></th>
                               <th><center>이동번호</center></th>
                            </tr>
                        </thead>
                        <tbody>

                        
                                <tr>
                                    <td><center> <input name="member_seq" type="text" value="@searchMember.member_seq" class="form-control" /></center></td>
                                    <td><center><input name="name" type="text" value="@searchMember.name" class="form-control" /></center> </td>
                                   
                                     <td>
                                         <input name="department" type="text" value="@searchMember.department" class="form-control" />
                                    </td>

                                     <td>
                                         <input name="position" type="text" value="@searchMember.position" class="form-control" />
                                    </td>

                                     <td>
                                         <input name="email" type="text" value="@searchMember.email" class="form-control" />
                                    </td>
                                   
                                     <td>
                                         <input name="office_tel" type="text" value="@searchMember.office_Tel" class="form-control" />
                                    </td>

                                     <td>
                                         <input name="mobile_tel" type="text" value="@searchMember.mobile_Tel" class="form-control" />
                                    </td>
                                </tr>
                            
                        </tbody>
                    </table>
                    </form>
                </div>



                <div class="text-right">
                     <button id="btnU" class="btn btn-sm btn-primary" onclick="alert('회원정보가 변경되었습니다.');">수정</button>
                     <button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal">삭제</button>


                    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">회원 삭제</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body" style = "text-align:center">
                                       해당 사원을 삭제하시겠습니까?
                                    </div>
                                    <div class="modal-footer">
                                        <button id="btnD" type="button" class="btn btn-primary">삭제하기</button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">취소하기</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- 모달 여기까지 -->

                        <form id="form1" method="post" action="/login/adminEdit">
                            <input type="hidden" name="member_seq" value="@searchMember.member_seq">
                            <input type="hidden" name="type" value="">
                        </form>




                </div>


            </div>


            <script>
            
    $("#btnU").click(function() {
        $("#form2").submit();
    });

      $("#btnD").click(function() {
        $("#form1 input[name=type]").val("D");
        $("#form1").submit();
    });
            
            
            </script>